{
    "name": "codespaces-php",
    "dockerComposeFile": ["docker-compose.yml"],
    "workspaceFolder": "/workspace",
    "service": "app",
    "shutdownAction": "stopCompose",
    "settings": {
        "#terminal.integrated.shell.linux": "/bin/bash"
    },
    "forwardPorts": [80,3306,8081],
    "postCreateCommand": "cp env .env && composer install",
    "portsAttributes": {
        "80": {
            "label": "HTTP"
        },
        "3306": {
            "label": "MariaDB"
        },
        "8081": {
            "label": "PHPMYadmin"
        }
    }
}